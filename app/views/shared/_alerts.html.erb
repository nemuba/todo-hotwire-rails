<div class="d-flex-row w-100">
  <% if notice || alert %>
    <div class="<%= flash_class(:notice) %>" role="alert">
      <%= alert || notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>