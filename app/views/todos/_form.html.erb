<%= form_with(
  model: todo,
  id: dom_id(todo),
  data: {controller: 'form', action: 'turbo:submit-end->form#reset'}
) do |form| %>
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
        <% if todo.errors.any? %>
          <span class="text-danger"><%= todo.errors.full_messages.first %></span>
        <% end %>
      </div>

      <div class="form-group-checkbox">
        <%= form.label :completed %>
        <%= form.check_box :completed, class: 'form-checkbox-input' %>
      </div>

      <div class="form-group">
        <%= form.submit nil, class: 'btn btn-primary'%>
      </div>
    </div>
  </div>
<% end %>
